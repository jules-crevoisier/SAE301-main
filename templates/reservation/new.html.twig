        {{ form_end(form) }}

        <div class="sticky-footer" id="stickyFooter">
            <div class="totals">
                <span id="total-duration">0h00</span>
                <span class="separator">‚Ä¢</span>
                <span id="total-price">0 ‚Ç¨</span>
