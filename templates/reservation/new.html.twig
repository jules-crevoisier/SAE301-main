    <script>
        const ALLOWED_ZIPCODES = [
            '10000', '10300', '10120', '10600', '10150', '10430',
            '10800', '10450', '10420', '10410', '10180', '10320', '10270'
        ];
        // √âTAT GLOBAL DU FORMULAIRE
        let currentStep = 1;
        let totalDuration = 0;
        let totalPrice = 0;

        document.addEventListener('DOMContentLoaded', function() {
            console.log("DOM charg√©. Initialisation du script...");
            updateTotals(); // Calcul initial au chargement

            // 1. √âCOUTEUR GLOBAL POUR LE PRIX (D√©l√©gation)
            const form = document.getElementById('reservationForm');
            if (form) {
                form.addEventListener('change', function(event) {
                    const target = event.target;

                    // Si on touche √† une checkbox service ou au switch d√©pose
                    if (target.classList.contains('service-checkbox') || target.classList.contains('removal-switch')) {
                        updateTotals();
                        // Si une date est d√©j√† choisie, on doit recharger les cr√©neaux car la dur√©e a chang√©
                        if(document.getElementById('reservation_dateRdv').value) {
                            fetchAvailableSlots();
                        }
                    }

                    // Si on change le moyen de paiement
                    if (target.name === 'reservation[paymentMethod]') {
                        const cbBlock = document.getElementById('credit-card-fields');
                        if(cbBlock) cbBlock.style.display = (target.value === 'online') ? 'block' : 'none';
                    }
                });
            }

            // 2. √âCOUTEUR SP√âCIFIQUE POUR LA DATE (AJAX)
            const dateInput = document.getElementById('reservation_dateRdv');
            if (dateInput) {
                dateInput.addEventListener('change', fetchAvailableSlots);
            } else {
                console.error("Erreur: Champ date #reservation_dateRdv introuvable");
            }
        });

        // --- FONCTION 1 : CALCUL DU PRIX ET DUR√âE ---
        function updateTotals() {
            let price = 0;
            let duration = 0;

            // Services
            document.querySelectorAll('.service-checkbox:checked').forEach(cb => {
                price += parseFloat(cb.getAttribute('data-price')) || 0;
                duration += parseInt(cb.getAttribute('data-duration')) || 0;
            });

            // D√©pose
            const removal = document.querySelector('.removal-switch');
            if (removal && removal.checked) {
                price += parseFloat(removal.getAttribute('data-price')) || 10;
                duration += parseInt(removal.getAttribute('data-duration')) || 20;
            }

            // 3. APPLICATION DE L'ARRONDI AU 1/4 D'HEURE SUP√âRIEUR
            // Ex: 65 min / 15 = 4.33 -> Plafond(4.33) = 5 -> 5 * 15 = 75 min
            let finalDuration = 0;
            if (duration > 0) {
                finalDuration = Math.ceil(duration / 15) * 15;
            }

            totalPrice = price;
            totalDuration = finalDuration;
            const formattedDuration = formatDuration(finalDuration);

            console.log(`Brut: ${duration}min -> Arrondi: ${finalDuration}min`);

            // Affichage
            const idsToCheck = ['live-total-price', 'live-total-duration', 'total-price', 'total-duration'];
            idsToCheck.forEach(id => {
                const el = document.getElementById(id);
                if(el) el.textContent = id.includes('price') ? price + ' ‚Ç¨' : formattedDuration;
            });

            // Validation bouton √©tape 1
            const btnStep1 = document.querySelector('#step-1 .btn-next');
            if(btnStep1) btnStep1.disabled = (duration === 0);
        }

        // --- FONCTION 2 : R√âCUP√âRATION AJAX DES CR√âNEAUX ---
        function fetchAvailableSlots() {
            const dateInput = document.getElementById('reservation_dateRdv');
            const slotSelect = document.getElementById('reservation_timeSlot');
            const btnStep2 = document.getElementById('btn-step-2');

            const dateVal = dateInput.value;

            // S√©curit√©s
            if (!dateVal) return;
            if (totalDuration === 0) {
                alert("Veuillez d'abord s√©lectionner au moins un soin.");
                dateInput.value = ""; // Reset date
                return;
            }

            // Feedback visuel
            slotSelect.innerHTML = '<option>Recherche des cr√©neaux...</option>';
            slotSelect.disabled = true;

            // Appel AJAX
            const url = `/booking/available-slots?date=${dateVal}&duration=${totalDuration}`;
            console.log("Appel AJAX vers : " + url);

            fetch(url)
                .then(response => {
                    if (!response.ok) throw new Error("Erreur serveur (404/500)");
                    return response.json();
                })
                .then(data => {
                    console.log("Donn√©es re√ßues :", data);
                    slotSelect.innerHTML = ''; // Vider

                    if (data.length === 0) {
                        slotSelect.innerHTML = '<option value="">Aucun cr√©neau dispo (ou ferm√©)</option>';
                    } else {
                        // Option par d√©faut
                        const defaultOpt = document.createElement('option');
                        defaultOpt.text = "-- Choisir une heure --";
                        defaultOpt.value = "";
                        slotSelect.appendChild(defaultOpt);

                        // Remplissage
                        data.forEach(slot => {
                            const option = document.createElement('option');
                            option.value = slot.time;
                            option.text = slot.label;
                            slotSelect.appendChild(option);
                        });

                        slotSelect.disabled = false;

                        // D√©blocage du bouton suivant au changement
                        slotSelect.onchange = function() {
                            btnStep2.disabled = (this.value === "");
                        };
                    }
                })
                .catch(error => {
                    console.error('Erreur AJAX:', error);
                    slotSelect.innerHTML = '<option>Erreur technique (Voir console)</option>';
                });
        }

        function formatDuration(minutes) {
            const h = Math.floor(minutes / 60);
            const m = minutes % 60;
            return (h > 0 ? h + 'h' : '') + (m > 0 ? (m < 10 ? '0'+m : m) : '00');
        }

        // --- NAVIGATION ---
        function nextStep(step) {
            if (step === 2) {
                // 1. V√©rifier qu'un service est choisi
                if (totalDuration === 0) {
                    alert("Veuillez choisir au moins une prestation.");
                    return;
                }

                // 2. V√©rifier le Code Postal (Critique)
                const zipInput = document.getElementById('reservation_visitZipcode');
                const errorMsg = document.getElementById('zip-error-msg');
                const userZip = zipInput.value.trim();

                if (!ALLOWED_ZIPCODES.includes(userZip)) {
                    // Zone non desservie
                    zipInput.classList.add('is-invalid'); // Classe Bootstrap rouge
                    zipInput.style.borderColor = 'red';
                    errorMsg.style.display = 'block';
                    errorMsg.textContent = "Nous ne nous d√©pla√ßons pas dans la zone " + userZip + " (uniquement Troyes + 20km).";
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                    return; // BLOQUE L'ACC√àS AU CALENDRIER
                } else {
                    // Zone OK
                    zipInput.classList.remove('is-invalid');
                    zipInput.style.borderColor = '#ccc';
                    errorMsg.style.display = 'none';
                }
            }
            // Validation √©tape 2
            if (step === 3) {
                const slotSelect = document.getElementById('reservation_timeSlot');
                const dateInput = document.getElementById('reservation_dateRdv');

                if(!dateInput.value) {
                    alert("Veuillez choisir une date.");
                    return;
                }
                if(!slotSelect.value) {
                    alert("Veuillez choisir une heure de rendez-vous.");
                    return;
                }
            }
            // --- VALIDATION √âTAPE 3 vers 4 (Coordonn√©es) ---
            if (step === 4) {
                const step3Div = document.getElementById('step-3');
                // On s√©lectionne tous les champs requis visibles dans l'√©tape 3
                const inputs = step3Div.querySelectorAll('input[required], select[required], textarea[required]');

                let allValid = true;

                for (const input of inputs) {
                    // checkValidity() v√©rifie si le champ respecte le required, le pattern, etc.
                    if (!input.checkValidity()) {
                        allValid = false;
                        // reportValidity() affiche la petite bulle d'erreur native du navigateur ("Veuillez remplir ce champ")
                        input.reportValidity();
                        break; // On s'arr√™te √† la premi√®re erreur pour ne pas agresser l'utilisateur
                    }
                }

                if (!allValid) {
                    return; // On bloque le passage √† l'√©tape suivante
                }
            }

            showStep(step);
        }

        function prevStep(step) { showStep(step); }

        function showStep(step) {
            document.querySelectorAll('.form-step').forEach(el => el.classList.remove('active'));
            document.getElementById('step-' + step).classList.add('active');
            document.querySelectorAll('.progress-steps .step').forEach(el => {
                el.classList.toggle('active', parseInt(el.dataset.step) <= step);
            });
            const fill = document.getElementById('progressFill');
            if(fill) fill.style.width = ((step-1) * 33) + '%';
            const topElement = document.querySelector('.progress-bar-container');
            setTimeout(() => {
                document.body.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 10);
            if (step === 4) updateFinalSummary();
            currentStep = step;
        }

        function updateFinalSummary() {
            // 1. R√©cup√©ration des √©l√©ments
            const dateInput = document.getElementById('reservation_dateRdv');
            const slotSelect = document.getElementById('reservation_timeSlot');
            const addressInput = document.getElementById('reservation_visitAddress');
            const cityInput = document.getElementById('reservation_visitCity');

            // 2. Traitement de la DATE (Formatage Fran√ßais)
            let dateTxt = '...';

            if (dateInput && dateInput.value) {
                // Astuce : on ajoute 'T12:00:00' pour fixer l'heure √† midi.
                // Cela emp√™che les bugs de d√©calage horaire (qui affichent parfois la veille).
                const dateObj = new Date(dateInput.value + 'T12:00:00');

                // Conversion en texte : "vendredi 5 d√©cembre 2025"
                const dateString = dateObj.toLocaleDateString('fr-FR', {
                    weekday: 'long',
                    day: 'numeric',
                    month: 'long',
                    year: 'numeric'
                });

                // Met la premi√®re lettre en majuscule : "Vendredi..."
                dateTxt = dateString.charAt(0).toUpperCase() + dateString.slice(1);
            }

            // 3. Traitement de l'HEURE
            let timeTxt = '...';
            if (slotSelect && slotSelect.selectedIndex >= 0) {
                // On r√©cup√®re le texte visible de l'option (ex: "14:00")
                timeTxt = slotSelect.options[slotSelect.selectedIndex].text;
            }

            // 4. Traitement de l'ADRESSE
            // On met des valeurs par d√©faut vides si les champs n'existent pas encore
            const address = addressInput ? addressInput.value : '';
            const city = cityInput ? cityInput.value : '';

            // 5. G√©n√©ration du HTML
            const summaryHTML = `
        <p><strong>Soins :</strong> ${totalPrice}‚Ç¨ (${formatDuration(totalDuration)})</p>
        <p><strong>Quand :</strong> Le ${dateTxt} √† ${timeTxt}</p>
        <p><strong>O√π :</strong> ${address} √† ${city}</p>
    `;

            // 6. Injection dans la page
            const summaryEl = document.getElementById('final-summary');
            if(summaryEl) summaryEl.innerHTML = summaryHTML;
        }
        document.addEventListener('DOMContentLoaded', function() {

            // --- 1. FORMATAGE NUM√âRO DE CARTE (Espacement par 4) ---
            const ccNumberInput = document.getElementById('cc-number');
            if (ccNumberInput) {
                ccNumberInput.addEventListener('input', function (e) {
                    // A. On retire tout ce qui n'est pas un chiffre
                    let value = e.target.value.replace(/\D/g, '');

                    // B. On ajoute un espace tous les 4 chiffres
                    // La regex (.{4}) capture des groupes de 4 caract√®res
                    let formattedValue = value.match(/.{1,4}/g)?.join(' ') || '';

                    // C. On remet la valeur format√©e dans le champ
                    e.target.value = formattedValue;
                });
            }

            // --- 2. FORMATAGE DATE (Ajout du Slash) ---
            const ccExpiryInput = document.getElementById('cc-expiry');
            if (ccExpiryInput) {
                ccExpiryInput.addEventListener('input', function (e) {
                    // A. On retire tout ce qui n'est pas un chiffre
                    let value = e.target.value.replace(/\D/g, '');

                    // B. Si on a plus de 2 chiffres (le mois), on ajoute le slash
                    if (value.length > 2) {
                        value = value.substring(0, 2) + ' / ' + value.substring(2, 4);
                    }

                    // C. Mise √† jour du champ
                    e.target.value = value;
                });

                // Petit bonus : gestion de la touche "Effacer" pour ne pas bloquer sur le slash
                ccExpiryInput.addEventListener('keydown', function(e) {
                    if (e.key === "Backspace" && this.value.endsWith(' / ')) {
                        this.value = this.value.slice(0, -3); // On efface le slash d'un coup
                    }
                });
            }

            // --- 3. FORMATAGE CVC (Chiffres uniquement) ---
            const ccCvcInput = document.getElementById('cc-cvc');
            if(ccCvcInput) {
                ccCvcInput.addEventListener('input', function(e) {
                    e.target.value = e.target.value.replace(/\D/g, ''); // Que des chiffres
                });
            }
        });
    </script>
